generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Tweet {
  id         String   @id @default(uuid())
  content    String
  userid     String   
  location   String
  deadline   String
}

model Author {
  id            String  @id @default(uuid())
  userid        String  
  name          String
  description   String
  org           String
}

model Gig {
  id             String  @id @default(uuid())
  commitment     String   
  description    String
  location       String
  postedOn       String
  min_pay        String
  max_pay        String
  is_remote      Boolean @default(true)
}